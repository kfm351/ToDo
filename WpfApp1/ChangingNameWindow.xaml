<Window x:Class="WpfApp1.ChangingNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ChangingNameWindow" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Label HorizontalAlignment="Center" Content="Введите новое имя"></Label>
            <TextBox x:Name="NicknameTb" HorizontalAlignment="Center" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="OkBtn" Content="Ок" Width="100" Click="OkBtn_Click"></Button>
            <Button x:Name="CancelBtn" Content="Отмена" Width="100" Margin="80 0" Click="CancelBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
